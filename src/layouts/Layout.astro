---
// src/layouts/Layout.astro
const { title = "Snacks Shacks" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="text-gray-800">
    <!-- Header -->
    <header class="bg-primary text-white p-4">
      <nav class="max-w-6xl mx-auto flex flex-wrap items-center justify-between gap-4">
        <div class="flex items-center gap-2">
          <img src="/images/snack.ico" alt="Logo Snacks Shacks" class="w-10 h-10 rounded-full" />
          <h1 class="text-2xl font-bold">
            <a href="/" class="hover:underline">Snacks Shacks</a>
          </h1>
        </div>
        <ul class="flex flex-wrap justify-center md:justify-end gap-4 text-sm sm:text-base">
          <li><a href="/" class="hover:underline">Inicio</a></li>
          <li><a href="/nosotros" class="hover:underline">Nosotros</a></li>
          <li><a href="/productos" class="hover:underline">Productos</a></li>
          <li><a href="/precios" class="hover:underline">Precios</a></li>
          <li><a href="/contacto" class="hover:underline">Contacto</a></li>
        </ul>
      </nav>
    </header>

    <!-- Main Content -->
    <main class="max-w-6xl mx-auto p-4 sm:p-6">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-100 text-center py-6 mt-10 border-t">
      <p class="text-base font-medium">SÃ­guenos en redes</p>
      <div class="flex justify-center gap-6 mt-2 mb-4">
        <a href="https://facebook.com" target="_blank" aria-label="Facebook">
          <svg class="w-6 h-6 fill-blue-600 hover:scale-110 transition-transform" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M22 12a10 10 0 1 0-11.5 9.9v-7H8v-3h2.5V9.5A3.5 3.5 0 0 1 14 6h3v3h-3a1 1 0 0 0-1 1V12h4l-.5 3h-3.5v7A10 10 0 0 0 22 12Z" />
          </svg>
        </a>
        <a href="https://instagram.com" target="_blank" aria-label="Instagram">
          <svg class="w-6 h-6 text-pink-600 fill-current hover:scale-110 transition-transform" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M7.75 2h8.5A5.75 5.75 0 0 1 22 7.75v8.5A5.75 5.75 0 0 1 16.25 22h-8.5A5.75 5.75 0 0 1 2 16.25v-8.5A5.75 5.75 0 0 1 7.75 2zm0 1.5A4.25 4.25 0 0 0 3.5 7.75v8.5A4.25 4.25 0 0 0 7.75 20.5h8.5a4.25 4.25 0 0 0 4.25-4.25v-8.5A4.25 4.25 0 0 0 16.25 3.5h-8.5zM12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0 1.5a3.5 3.5 0 1 0 0 7 3.5 3.5 0 0 0 0-7zm5.25-.75a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
          </svg>
        </a>
        <a href="https://youtube.com" target="_blank" aria-label="YouTube">
          <svg class="w-6 h-6 fill-red-600 hover:scale-110 transition-transform" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
            <path d="M549.7 124.1c-6.3-23.8-24.9-42.5-48.5-48.9C456.7 64 288 64 288 64s-168.7 0-213.2 11.2c-23.6 6.4-42.2 25.1-48.5 48.9C16 168.7 16 256 16 256s0 87.3 10.3 131.9c6.3 23.8 24.9 42.5 48.5 48.9C119.3 448 288 448 288 448s168.7 0 213.2-11.2c23.6-6.4 42.2-25.1 48.5-48.9C560 343.3 560 256 560 256s0-87.3-10.3-131.9zM232 336V176l142.7 80L232 336z"/>
          </svg>
        </a>
      </div>
      <p class="text-sm text-gray-500">By Team 3</p>
    </footer>
  </body>
</html>
