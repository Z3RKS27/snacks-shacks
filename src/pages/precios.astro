---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Precios - Snacks Shacks">
  <section class="py-12 px-4 bg-yellow-50">
    <h2 class="text-4xl font-bold text-center mb-10 text-yellow-800">Nuestros Paquetes</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
      <!-- Básico -->
      <div class="bg-white rounded-xl shadow-md p-6 hover:scale-105 transition-transform duration-300 text-center border border-yellow-300">
        <h3 class="text-2xl font-bold text-yellow-700 mb-2">Básico</h3>
        <p class="text-gray-600 mb-4">1 bolsa de snack</p>
        <p class="text-3xl font-extrabold text-green-600 mb-4">$15</p>
        <a href="/contacto" class="inline-block bg-yellow-400 hover:bg-yellow-500 text-white py-2 px-4 rounded-full">Comprar</a>
      </div>

      <!-- Intermedio -->
      <div class="bg-white rounded-xl shadow-md p-6 hover:scale-105 transition-transform duration-300 text-center border-2 border-yellow-500">
        <h3 class="text-2xl font-bold text-yellow-700 mb-2">Intermedio</h3>
        <p class="text-gray-600 mb-4">5 bolsas surtidas</p>
        <p class="text-3xl font-extrabold text-green-600 mb-4">$70</p>
        <a href="/contacto" class="inline-block bg-yellow-400 hover:bg-yellow-500 text-white py-2 px-4 rounded-full">Comprar</a>
      </div>

      <!-- Plus -->
      <div class="bg-white rounded-xl shadow-md p-6 hover:scale-105 transition-transform duration-300 text-center border border-yellow-300">
        <h3 class="text-2xl font-bold text-yellow-700 mb-2">Plus</h3>
        <p class="text-gray-600 mb-4">10 bolsas para mayoreo</p>
        <p class="text-3xl font-extrabold text-green-600 mb-4">$130</p>
        <a href="/contacto" class="inline-block bg-yellow-400 hover:bg-yellow-500 text-white py-2 px-4 rounded-full">Comprar</a>
      </div>
    </div>
  </section>
</Layout>
